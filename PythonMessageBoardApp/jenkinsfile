pipeline {
    agent any
    stages {
        stage('Build Docker Image') {
            steps {
                script{
                    sh "docker build -t message-boardappimage ."
                }
                // Build Docker image
                
            }
        }
        
        stage('Run Docker Container') {
             // Added agent directive for this stage
            steps {
                // Run Docker container
                sh "docker run -d -p 5000:5000 --name message-board-container message-boardappimage"
            }
        }
        
        stage('Test Application') {
             // Added agent directive for this stage
            steps {
                // Insert your test steps here. For example, a simple curl command to check if the app is up.
                sh 'docker exec message-board-container curl -f http://localhost:5000'
            }
        }
    }
    
    post {
        always {
            // Cleanup: Stop and remove Docker container and image after the pipeline is done
            sh 'docker stop message-board-container || true'
            sh 'docker rm message-board-container || true'
            sh "docker rmi message-boardappimage || true"
        }
    }
}
