pipeline {
    agent any
    environment {
        // Define Docker image name
        IMAGE_NAME = 'flask-app'
    }
    stages {
        stage('Build Docker Image') {
            agent {
                docker {
                    image 'docker:19.03.12'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                script {
                    // Build Docker image
                    sh "docker build -t ${IMAGE_NAME} ."
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    // Run Docker container
                    sh "docker run -d -p 5000:5000 --name app ${IMAGE_NAME}"
                }
            }
        }
        stage('Test Application') {
            steps {
                // Insert your test steps here. For example, a simple curl command to check if the app is up.
                sh 'curl http://localhost:5000'
            }
        }
    }
    post {
        always {
            // Cleanup: Stop and remove Docker container and image after the pipeline is done
            sh 'docker stop app || true'
            sh 'docker rm app || true'
            sh "docker rmi ${IMAGE_NAME} || true"
        }
    }
}
